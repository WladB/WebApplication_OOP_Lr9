@model WebApp_OOP_Lr9.DataBase.FinancingOption

@{
    ViewData["Title"] = "Create";
}
<link href="/css/site.css" rel="stylesheet" />

<header class="header">
    <h1>Додати квартиру</h1>
    <div>
    <a asp-controller="Home" asp-action="Index">Головна</a> |
    <a asp-controller="NewBuildingss" asp-action="Index">Новобудови</a> |
    <a asp-action="Index" asp-route-buildId="@Model.NewBuildingId">Назад</a>
    </div>
</header>
<main class="main">
<div class="formCentr">
    <form asp-action="Create" class="formStyle">
            @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Caption" class="control-label"></label>
            <input asp-for="Caption" class="FormField" />
            <span asp-validation-for="Caption" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="NewBuildingId" />
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="FormField" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="button" />
        </div>
    </form>
</div>
</main>
