@model WebApp_OOP_Lr9.DataBase.Property

@{
    ViewData["Title"] = "Create";
}
<link href="/css/site.css" rel="stylesheet" />

<body>
<header class="header">
    <h1>Додати квартиру</h1>
    <div>
        <a asp-controller="Home" asp-action="Index">Головна</a> |
        <a asp-controller="NewBuildingss" asp-action="Index">Нововбудови</a> |
        <a asp-action="Index" asp-route-buildId="@Model.NewBuildingId">Назад</a>
        </div>
</header>

<main class="main">
<div class="formCentr">
    <form asp-action="Create" class="formStyle">
                @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CountRooms" class="control-label"></label>
            <input asp-for="CountRooms" class="FormField" />
                <span asp-validation-for="CountRooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="NewBuildingId" />
            </div>
            <div class="form-group">
                <label asp-for="Area" class="control-label"></label>
            <input asp-for="Area" class="FormField" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Floor" class="control-label"></label>
            <input asp-for="Floor" class="FormField" />
                <span asp-validation-for="Floor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="button" />
            </div>
        </form>
    </div>
    </main>
</body>